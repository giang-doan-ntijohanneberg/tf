doctype html
html lang="en"
  head
    meta charset="UTF-8"
    meta http-equiv="X-UA-Compatible" content="IE=edge"
    meta name="viewport" content="width=device-width, initial-scale=1.0"
    title Her Gorgeous Past
    link rel="stylesheet" href="/css/style1.css"
  body
    div#grid_wrapper_collection
      header
        p Every past has its beauty
      
      nav
        ul#nav_links
          li
            a href="/index" Home
          li
            a href="/spring_collection" Shop
          li#shop_name
            a href="/index" Her Gorgeous Past
          li
            a href="/gallery" Gallery
          li
            a href="/member" Hej #{session[:username]}

      aside#aside_collection_page
