        div.season
          - ["spring", "summer", "autumn", "winter"].each do |season|
            figure.season_card
              img.img_season src="img/#{season}.jpg" alt="Img #{season.capitalize}Card"
              a.button_season href="/#{season}_collection" = season.capitalize
    
